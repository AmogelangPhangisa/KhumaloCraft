@page
@model IndexModel
@{
    ViewData["Title"] = "Art Store";
}

<style>
    .card-img-top {
        width: 100%;
        height: 250px; /* Set the desired height */
        object-fit: cover; /* Ensures the image covers the area without distortion */
    }
</style>

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Art Store</h1>
        <p class="lead">Discover original artworks, prints, and creative supplies curated just for you.</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <img src="~/images/featured-art1.jpg" class="card-img-top" class="img-fluid rounded" alt="Featured Art 1" />
            <h3 class="mt-3">Featured Artwork</h3>
            <p>Explore our collection of handpicked masterpieces.</p>
            <a href="/MyWork" class="btn btn-primary">Shop Now</a>
        </div>
        <div class="col-md-4">
            <img src="~/images/featured-art2.jpg" class="card-img-top" class="img-fluid rounded" alt="Featured Art 2" />
            <h3 class="mt-3">Prints & Posters</h3>
            <p>Bring inspiration to your space with our exclusive prints.</p>
            <a href="/MyWork" class="btn btn-primary">Browse Prints</a>
        </div>
        <div class="col-md-4">
            <img src="~/images/featured-supplies.jpg"class="card-img-top" class="img-fluid rounded" alt="Featured Supplies" />
            <h3 class="mt-3">Art Supplies</h3>
            <p>Everything you need to create your next masterpiece.</p>
            <a href="/MyWork" class="btn btn-primary">Shop Supplies</a>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h2>About Us</h2>
        <p>At Art Store, we believe in the power of creativity. Whether you're an experienced artist or just getting started, we have the tools and inspiration to help you express your vision.</p>
        <a href="/AboutUs" class="btn btn-secondary">Learn More</a>
    </div>

    <div class="mt-5 text-center">
        <h2>Join Our Community</h2>
        <p>Stay updated with the latest collections and exclusive offers. Sign up for our newsletter today!</p>
        <a href="/newsletter" class="btn btn-info">Sign Up</a>
    </div>
</div>
