@page
@model MyWorkModel
@{
    ViewData["Title"] = "My Work";
}

<style>
    .card-img-top {
        width: 100%;
        height: 250px; /* Set the desired height */
        object-fit: cover; /* Ensures the image covers the area without distortion */
    }
</style>

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">My Work</h1>
        <p class="lead">Browse and purchase original artworks directly from my collection.</p>
    </div>

    <div class="row mt-5">
        <!-- Gallery Section -->
        <div class="col-md-8">
            <div class="row">
                <!-- Artwork 1 -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/artwork1.jpg" class="card-img-top" alt="Artwork 1" />
                        <div class="card-body">
                            <h5 class="card-title">Sunset Over the Hills</h5>
                            <p class="card-text">A beautiful depiction of a sunset over rolling hills.</p>
                            <p class="card-text"><strong>Price:</strong> $150</p>
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>

                <!-- Artwork 2 -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/artwork2.jpg" class="card-img-top" alt="Artwork 2" />
                        <div class="card-body">
                            <h5 class="card-title">Abstract Dreams</h5>
                            <p class="card-text">An abstract piece that invites you into a world of imagination.</p>
                            <p class="card-text"><strong>Price:</strong> $200</p>
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>

                <!-- Artwork 3 -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/artwork3.jpg" class="card-img-top" alt="Artwork 3" />
                        <div class="card-body">
                            <h5 class="card-title">City Lights</h5>
                            <p class="card-text">A vibrant cityscape capturing the essence of urban life.</p>
                            <p class="card-text"><strong>Price:</strong> $175</p>
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>

                <!-- Artwork 4 -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/artwork4.jpg" class="card-img-top" alt="Artwork 4" />
                        <div class="card-body">
                            <h5 class="card-title">Forest Whisper</h5>
                            <p class="card-text">An enchanting scene of a forest bathed in morning light.</p>
                            <p class="card-text"><strong>Price:</strong> $220</p>
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>

                <!-- Artwork 5 -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/artwork5.jpg" class="card-img-top" alt="Artwork 5" />
                        <div class="card-body">
                            <h5 class="card-title">Ocean Waves</h5>
                            <p class="card-text">Feel the power and serenity of the ocean in this dynamic piece.</p>
                            <p class="card-text"><strong>Price:</strong> $180</p>
                            <button class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shopping Cart Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Your Cart</h4>
                </div>
                <div class="card-body">
                    <p>Your cart is currently empty.</p>
                    <a href="/checkout" class="btn btn-success btn-block">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
